{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "meteor/**/*",
        "**/*.aot.ts"
    ],
    "compileOnSave": false,
    "angularCompilerOptions": {
        "genDir": "aot",
        "skipMetadataEmit": true
    }
}